if(${CONFIG} STREQUAL "Debug")
	if (EXISTS "${QtApng_BINARY_DIR}/${CONFIG}/plugins/imageformats/qapngd.dll")
		if (EXISTS "${DEV_OUTPUT_DIR}/Debug/bin/64bit/plugins/imageformats" AND NOT EXISTS "${DEV_OUTPUT_DIR}/Debug/bin/64bit/plugins/imageformats/qapngd.dll")
			message(STATUS "${QtApng_BINARY_DIR}/${CONFIG}/plugins/imageformats/qapngd.dll" -> "${DEV_OUTPUT_DIR}/Debug/bin/64bit/plugins/imageformats/qapngd.dll")
			file(COPY "${QtApng_BINARY_DIR}/${CONFIG}/plugins/imageformats/qapngd.dll" DESTINATION "${DEV_OUTPUT_DIR}/Debug/bin/64bit/plugins/imageformats/")
		elseif (EXISTS "${DEV_OUTPUT_DIR}/Debug/bin/64bit/imageformats" AND NOT EXISTS "${DEV_OUTPUT_DIR}/Debug/bin/64bit/imageformats/qapngd.dll")
			message(STATUS "${QtApng_BINARY_DIR}/${CONFIG}/plugins/imageformats/qapngd.dll" -> "${DEV_OUTPUT_DIR}/Debug/bin/64bit/imageformats/qapngd.dll")
			file(COPY "${QtApng_BINARY_DIR}/${CONFIG}/plugins/imageformats/qapngd.dll" DESTINATION "${DEV_OUTPUT_DIR}/Debug/bin/64bit/imageformats/")
		endif()
	endif()
else()
	if (EXISTS "${QtApng_BINARY_DIR}/${CONFIG}/plugins/imageformats/qapng.dll")
		if (EXISTS "${DEV_OUTPUT_DIR}/Release/bin/64bit/plugins/imageformats" AND NOT EXISTS "${DEV_OUTPUT_DIR}/Release/bin/64bit/plugins/imageformats/qapng.dll")
