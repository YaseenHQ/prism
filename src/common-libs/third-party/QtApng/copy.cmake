		elseif (EXISTS "${DEV_OUTPUT_DIR}/Release/bin/64bit/imageformats" AND NOT EXISTS "${DEV_OUTPUT_DIR}/Release/bin/64bit/imageformats/qapng.dll")
			message(STATUS "${QtApng_BINARY_DIR}/${CONFIG}/plugins/imageformats/qapng.dll" -> "${DEV_OUTPUT_DIR}/Release/bin/64bit/imageformats/qapng.dll")
			file(COPY "${QtApng_BINARY_DIR}/${CONFIG}/plugins/imageformats/qapng.dll" DESTINATION "${DEV_OUTPUT_DIR}/Release/bin/64bit/imageformats/")
