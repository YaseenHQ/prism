#CONFIG QtApng_BINARY_DIR DEV_OUTPUT_DIR ARCH TARGET OS_WINDOWS OS_MACOS

message(STATUS "Copy QtApng target.")
message(STATUS "CONFIG=${CONFIG}")
message(STATUS "QtApng_BINARY_DIR=${QtApng_BINARY_DIR}")
message(STATUS "DEV_OUTPUT_DIR=${DEV_OUTPUT_DIR}")
message(STATUS "ARCH=${ARCH}")
message(STATUS "TARGET=${TARGET}")
message(STATUS "OS_WINDOWS=${OS_WINDOWS}")
